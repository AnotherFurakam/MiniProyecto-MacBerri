@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MiniProyectoMacBerri.Dto.RecoveryEmailDto

<div class="d-flex w-100 h-100 justify-content-center align-items-center">
    <form class="shadow p-5 rounded-3" asp-controller="Recovery" asp-action="Index" method="post">
        <h1 class="display-5 fw-normal mt-3 mb-5">Recupera tu cuenta</h1>
        <div>
            <label class="form-label">Ingrese su correo:</label>
            <input class="form-control" type="email" placeholder="tucorreo@email.com" asp-for="Email" />
        </div>
        <div class="my-3">
            <button class="btn btn-primary w-100">Enviar</button>
        </div>
        <div class="d-flex justify-content-center w-100">
            <span asp-validation-for="Email" class="text-danger fs-5"></span>
        </div>
    </form>
</div>
