@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Product>

<h1 class="display-4 my-4">Carrito de compras</h1>
<div class="d-flex gap-4 w-100">
    <div class="col-8  d-flex flex-column gap-4 border border-secondary p-4 rounded-3">
        @{
            decimal total = 0;
        }
        @foreach (var product in Model)
        {
            <div class="d-flex gap-3 bg-light p-3 rounded-3 shadow-sm">
                <div>
                    <img class="img-fluid cart-img rounded-3 shadow-sm" src=@product.UrlImage alt=@product.Name />
                </div>
                <div>
                    <h5 class="text-dark">@Html.DisplayFor(m => @product.Name)</h5>
                    <p class="text-secondary">@Html.DisplayFor(m => @product.Description)</p>
                    <p class="text-secondary text-end fs-4">$ @Html.DisplayFor(m => @product.Price)</p>
                </div>
                <a class="d-flex align-items-center h-full btn btn-danger rounded-3"><i class="bi bi-trash3-fill"></i></a>
            </div>
            total += product.Price;
        }
    </div>
    <div class="col-4 p-4 bg-dark rounded-3 h-100">
        <p class="text-white fs-3 text-center">Detalle de compra</p>
        <div class="d-flex flex-col gap-3 text-white fs-3 justify-content-between my-3">
            <label>Total:</label>
            <p>$ @total</p>
        </div>
        <a class="btn btn-primary w-100 fs-4">Realizar compra</a>
    </div>
</div>

