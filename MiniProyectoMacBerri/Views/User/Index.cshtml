
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<User>

<div>
    <h1 class="display-5 fw-normal my-5">Crud de usuarios</h1>
    <div class="d-flex my-3 justify-content-end">
        <a class="btn btn-primary" asp-controller="User" asp-action="Create">Agregar usuario</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombres</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Email</th>
                    <th scope="col">Creación</th>
                    <th scope="col">Rol</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @{int index = 1;}
                @foreach (var user in Model)
                {
                    <tr>
                        <th scope="row">@index</th>
                        <td>@Html.DisplayFor(m => user.Names)</td>
                        <td>@Html.DisplayFor(m => user.Lastnames)</td>
                        <td>@Html.DisplayFor(m => user.Email)</td>
                        <td>@Html.DisplayFor(m => user.CreateAt)</td>
                        <td>@Html.DisplayFor(m => user.IdRolNavigation.Name)</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2 w-100">
                                <a class="btn btn-warning" asp-action="Update" asp-controller="User" asp-route-id_user=@user.IdUser>
                                    <i class="bi bi-pencil text-white"></i>
                                </a>
                                <a class="btn btn-danger" asp-action="Delete" asp-controller="User" asp-route-id_user=@user.IdUser>
                                    <i class="bi bi-trash text-white"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>
</div>
